{
  "name": "NUTRIA MACRO",
  "version": "1.0.0",
  "description": "A comprehensive macro tracking application for nutritional planning and meal management",
  "author": "NUTRIA Team",
  "license": "MIT",
  "homepage": "https://nutria-macro.app",
  "repository": {
    "type": "git",
    "url": "https://github.com/nutria/macro-tracker.git"
  },
  "keywords": [
    "nutrition",
    "macro tracking",
    "meal planning",
    "health",
    "fitness",
    "calories",
    "protein",
    "carbs",
    "fat",
    "react",
    "typescript",
    "tailwindcss"
  ],
  "technologies": {
    "frontend": {
      "framework": "React 18",
      "language": "TypeScript",
      "styling": "TailwindCSS",
      "bundler": "ES6 Modules",
      "icons": "Custom SVG Icons"
    },
    "architecture": {
      "pattern": "Component-based",
      "state_management": "React Hooks",
      "responsive_design": "Mobile-first",
      "theme_support": "Dark/Light mode"
    }
  },
  "features": {
    "core": [
      "Meal planning and tracking",
      "Macro calculation (calories, protein, carbs, fat)",
      "Food database with Brazilian foods",
      "Responsive design for all devices",
      "Dark/Light theme toggle",
      "Real-time macro summaries"
    ],
    "ui_components": [
      "Interactive meal cards",
      "Sticky macro summary panel",
      "Responsive navigation header",
      "Food quantity management",
      "Progress tracking visualizations",
      "Detailed nutritional breakdown"
    ],
    "user_experience": [
      "Intuitive meal builder interface",
      "Quick add/remove food items",
      "Visual macro distribution charts",
      "Mobile-optimized touch interactions",
      "Accessibility-focused design",
      "Loading states and error handling"
    ]
  },
  "data_structure": {
    "food_items": {
      "properties": ["id", "name", "macros", "quantity"],
      "macro_values": ["calories", "protein", "carbs", "fat"]
    },
    "meals": {
      "properties": ["id", "name", "type", "foods"],
      "types": ["breakfast", "lunch", "dinner", "snack"]
    },
    "app_state": {
      "global": ["meals", "isDarkMode", "activeSection", "isLoading", "error"],
      "computed": ["dailyMacros"]
    }
  },
  "browser_support": {
    "modern_browsers": "Chrome 90+, Firefox 88+, Safari 14+, Edge 90+",
    "features_required": ["ES6 Modules", "CSS Grid", "Flexbox", "Custom Properties"]
  },
  "performance": {
    "optimization": [
      "useMemo for expensive calculations",
      "Component-level state management",
      "Efficient re-rendering patterns",
      "Minimal bundle size with CDN dependencies"
    ],
    "loading": {
      "initial_load": "< 2 seconds",
      "interaction_response": "< 100ms",
      "theme_switching": "Instant"
    }
  },
  "accessibility": {
    "standards": "WCAG 2.1 AA",
    "features": [
      "Keyboard navigation support",
      "Screen reader compatibility",
      "High contrast theme options",
      "Focus management",
      "Semantic HTML structure"
    ]
  },
  "deployment": {
    "type": "Static Site",
    "requirements": "Modern web server with HTTPS",
    "cdn_dependencies": [
      "React 18 (unpkg)",
      "ReactDOM 18 (unpkg)",
      "TailwindCSS (CDN)",
      "TypeScript Compiler (unpkg)"
    ]
  },
  "development": {
    "setup": "No build process required - runs directly in browser",
    "file_structure": {
      "root": ["index.html", "index.tsx", "App.tsx"],
      "types": ["types.ts"],
      "data": ["constants.ts"],
      "components": ["Header.tsx", "MealCard.tsx", "MacrosSummary.tsx", "MealBuilderSection.tsx", "SummarySection.tsx", "Button.tsx", "Card.tsx", "Icons.tsx"],
      "metadata": ["metadata.json"]
    }
  },
  "created_date": "2024-01-15",
  "last_updated": "2024-01-15",
  "status": "Production Ready"
}